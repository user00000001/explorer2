<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.TesraSupernet.explorer.statistics.mapper.NetNodeInfoMapper">
    <resultMap id="BaseResultMap" type="com.github.TesraSupernet.explorer.statistics.model.NetNodeInfo">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="ip" jdbcType="VARCHAR" property="ip"/>
        <result column="version" jdbcType="VARCHAR" property="version"/>
        <result column="is_consensus" jdbcType="BIT" property="isConsensus"/>
        <result column="is_active" jdbcType="BIT" property="isActive"/>
        <result column="last_active_time" jdbcType="BIGINT" property="lastActiveTime"/>
        <result column="country" jdbcType="VARCHAR" property="country"/>
        <result column="longitude" jdbcType="VARCHAR" property="longitude"/>
        <result column="latitude" jdbcType="VARCHAR" property="latitude"/>
    </resultMap>
    <update id="updateWithLatestInfo" parameterType="com.github.TesraSupernet.explorer.statistics.model.NetNodeInfo">
        update tbl_net_node_info
        set version          = #{version},
            is_consensus     = #{isConsensus},
            is_active        = #{isActive},
            last_active_time = #{lastActiveTime},
            country          = #{country},
            longitude        = #{longitude},
            latitude         = #{latitude}
        WHERE ip = #{ip}
          AND last_active_time &lt; #{lastActiveTime};
    </update>
</mapper>